{
    "description": "ARK-CMS browser extension",
    "manifest_version": 2,
    "name": "ARK-CMS",
    "version": "1.0",
    "homepage_url": "https://github.com/pb-it/ark-cms-browser-extension",
    "icons": {
        "48": "icons/storage.png"
    },
    "permissions": [
        "storage",
        "bookmarks"
    ],
    "browser_action": {
        "default_icon": "icons/storage.png",
        "default_title": "ARK-CMS",
        "default_popup": "popup/popup.html"
    },
    "content_security_policy": "script-src 'self' https://code.jquery.com https://unpkg.com https://cdn.jsdelivr.net; object-src 'self'",
    "browser_specific_settings": {
        "gecko": {
            "id": "support@pb-it.at",
            "strict_min_version": "42.0"
        }
    }
}